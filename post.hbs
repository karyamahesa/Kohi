{{!< default}}
    {{#post}}
    <section class="post-container">
        <article class="post-single {{post_class}}">
            <header class="post-heading">
                <div class="post-meta">
                    <span class="meta-date">
                        <time datetime="{{date format='YYYY-MM-DD'}}">
                            {{date format="DD MMMM YYYY"}}
                        </time>
                    </span>
                    {{#author}}
                    <span>— </span>  
                    <a class="meta-author" href="{{url}}">         
                        <span>{{name}}</span>
                    </a>
                    {{/author}}
                </div>
                <h2>{{title}}</h2>
            </header>
            <section class="post-content">
                {{content}}
            </section>
            <div class="post-meta tagged">
                {{tags separator=" — " prefix="Tagged in : "}}
                <div class="share">
                    <a class="facebook inline-item" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;" title="Share this post!">
                        Facebook
                    </a>
                    <a class="twitter inline-item" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;" title="Share this post!">
                        Twitter
                    </a>                    
                    <a class="gplus inline-item" href="https://plus.google.com/share?url={{url absolute="true"}}"
                       onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;" title="Share this post!">
                        Google+
                    </a> 
                </div>
            </div>            
            <footer class="post-footer">
                {{#author}}
                <div class="footer-author clearfix">
                    {{#if image}}
                    <div class="author-photo item-left">
                        <img alt="{{name}}" src="{{image}}" />
                    </div>
                    {{/if}}
                    <div class="author-detailed item-left">
                        <h4>About <a href="{{url}}">{{name}}</a></h4>
                        <p>{{bio}}</p>
                        <div class="detailed-detail">
                            {{#if location}}
                            <div class="detail-location inline-item">
                                <span class="inline-icon fa fa-street-view"></span>
                                {{location}}
                            </div>
                            {{/if}}
                            {{#if website}}
                            <span class="detail-website inline-icon fa fa-link"></span><a href="{{website}}">{{website}}</a>
                            {{/if}}
                        </div>
                    </div>
                </div>
                {{/author}}
                <section id="comments">        
                    {{> "disqus_form"}}
                </section>
                <div class="post-nav">
                    {{#prev_post}}
                    <a class="nav-prevnext" href="{{url}}" {{#if image}}style="background-image:url({{image}});"{{/if}}>
                        <span>
                            <i>Prev Post :</i> {{title}}
                        </span>
                    </a>
                    {{/prev_post}}
                    {{#next_post}}
                    <a class="nav-prevnext" href="{{url}}" {{#if image}}style="background-image: url({{image}});"{{/if}}>
                        <span>
                            <i>Next Post :</i> {{title}}
                        </span>
                    </a>
                    {{/next_post}}
                </div>
            </footer>
        </article>
    </section>
    {{/post}}